{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "rootDir": "src",
    "emitDeclarationOnly": true
