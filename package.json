  "scripts": {
    "w": "./scripts/w.sh",
    "lint": "eslint './**/*.?(js|jsx|ts|tsx)'",
    "lint:fix": "eslint './**/*.(j|t)s?(x)' --fix",
    "test": "npm-run-all clean test:lint test:coverage",
